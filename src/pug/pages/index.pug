block variables
  - const title = 'Тестовое задание'

doctype html
block html
  html(lang='ru')
    include ../includes/head
    body
      main.page
        .page__container
          .page__body
            include ../mixins/printString
            print-string.js-print-string(text='' layout='row' order='direct')
          .page__sidebar.js-settings
            aside.sidebar
              h2.sidebar__title Settings
              form.sidebar__form
                .sidebar__form-group
                  label.sidebar__label(for='text-input') Введите текст
                  input.sidebar__input.js-settings-input#text-input(type='text' name='text')
                .sidebar__form-group
                  label.sidebar__label(for='layout') Layout
                  select.sidebar__select.js-settings-layout#layout(name='layout')
                    option(value="row") Inline
                    option(value="col") Column
                .sidebar__form-group
                  label.sidebar__label(for='order') Direction
                  select.sidebar__select.js-settings-order#order(name='order')
                    option(value="direct") Direct
                    option(value="reverse") Reverse
                    option(value="random") Randomize
